<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_print_agent" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.print.agent</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='languages']" position="after">
                
                <h2>Odoo Print Direct - MateusC7</h2>
                <div class="row mt16 o_settings_container">
                    
                    <!-- Caja Izquierda: ConfiguraciÃ³n de URL -->
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Print Agent Configuration</span>
                            <div class="text-muted">
                                Enter the IP address and port where the agent is running.
                            </div>
                            <div class="text-muted">
                                <i>Example: https://192.168.1.15:5000</i>
                            </div>
                            <div class="mt8">
                                <field name="pos_print_agent_url" placeholder="https://192.168.1.X:5000" style="width: 100%;"/>
                            </div>
                        </div>
                    </div>

                    <!-- Caja Derecha: BotÃ³n de Acceso Directo -->
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Report Management</span>
                            <div class="text-muted">
                                Assign specific printers to reports (Invoices, Orders, etc.)
                            </div>
                            <div class="mt8">
                                <button name="action_open_print_reports" 
                                        string="Manage Reports &amp; Printers ðŸ–¨ï¸" 
                                        type="object" 
                                        class="btn-primary" 
                                        icon="fa-print"/>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>
</odoo>